!IF "$(BSP_NOAUDIO)" == "1"
SKIPBUILD=1
!ENDIF

!IF "$(BSP_AUDIO_SGTL5000)" == ""
SKIPBUILD=1
!ENDIF

TARGETNAME=wavedev2_sgtl5000
RELEASETYPE=PLATFORM
TARGETTYPE=DYNLINK
PREPROCESSDEFFILE=1

DEFFILE=$(TARGETNAME).def

DLLENTRY=_DllMainCRTStartup

TARGETLIBS=\
    $(_SYSGENSDKROOT)\lib\$(_CPUINDPATH)\coredll.lib   \
    $(_SYSGENOAKROOT)\lib\$(_CPUINDPATH)\ceddk.lib     \
    $(_SYSGENSDKROOT)\lib\$(_CPUINDPATH)\mmtimer.lib   \
    $(_TARGETPLATROOT)\lib\$(_CPUDEPPATH)\cspddk.lib   \
    $(_TARGETPLATROOT)\lib\$(_CPUDEPPATH)\i2csdk.lib

SOURCELIBS=\
    $(_PLATCOMMONLIB)\$(_CPUINDPATH)\wavedev2_$(_SOCDIR).lib
    
INCLUDES=\
    $(_PLATFORMROOT)\COMMON\SRC\SOC\$(_SOCDIR)\WAVEDEV2; \
    $(_PLATFORMROOT)\COMMON\SRC\SOC\$(_SOCDIR)\INC;      \
    $(INCLUDES) 

SOURCES=\
    bsphwctxt.cpp \
    sgtl5000codec.cpp

!IF "$(BSP_AUDIO_NOREC)" == "1"
CDEFINES=$(CDEFINES) -DAUDIO_NOREC
!ENDIF
