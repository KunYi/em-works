!IF "$(BSP_NOAUDIO)" == "1"
SKIPBUILD=1
!ENDIF

!IF "$(BSP_I2CBUS1)" == ""
SKIPBUILD=1
!ENDIF

TARGETNAME=wavedev2_sgtl5000
TARGETTYPE=DYNLINK
RELEASETYPE=PLATFORM

PREPROCESSDEFFILE=1

DEFFILE=$(_PLATCOMMONLIB)\$(_CPUINDPATH)\wavedev2_$(_SOCDIR).def

DLLENTRY=_DllMainCRTStartup

FILE_VIEW_ROOT_FOLDER= \

FILE_VIEW_RESOURCE_FOLDER= \

FILE_VIEW_INCLUDES_FOLDER= \
    sgtl5000codec.h \
    sgtl5000_regs.h \

SOURCES= \
    bsphwctxt.cpp \
    SGTL5000Codec.cpp

CDEFINES=$(CDEFINES) -DWAVEDEV2_EXPORTS

TARGETLIBS=\
    $(_SYSGENSDKROOT)\lib\$(_CPUINDPATH)\coredll.lib \
    $(_SYSGENOAKROOT)\lib\$(_CPUINDPATH)\ceddk.lib \
    $(_SYSGENSDKROOT)\lib\$(_CPUINDPATH)\mmtimer.lib \
    $(_TARGETPLATROOT)\lib\$(_CPUDEPPATH)\cspddk.lib \
    $(_TARGETPLATROOT)\lib\$(_CPUDEPPATH)\i2csdk.lib
    
SOURCELIBS=\
    $(_PLATCOMMONLIB)\$(_CPUINDPATH)\wavedev2_$(_COMMONSOCDIR).lib \
    $(_PLATCOMMONLIB)\$(_CPUINDPATH)\wavedev2_$(_SOCDIR).lib
    
INCLUDES= $(INCLUDES); \
    $(_PLATFORMROOT)\COMMON\SRC\SOC\$(_COMMONSOCDIR)\WAVEDEV2; \
    

!IF "$(BSP_AUDIO_NOREC)" == "1"
CDEFINES=$(CDEFINES) -DAUDIO_NOREC
!ENDIF
